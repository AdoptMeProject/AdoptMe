{{#if post.urgent}}

  <div class="card urgent" >
    <div style="height: 250px; overflow: hidden">
 <img src="{{post.image}}" class="card-img-top-post-detail" alt="...">
    </div>
   

    <div class="card-body">

      <div>
        <h5 class="card-title force-font"><a href="/posts/{{post._id}}" class="text-dark">{{post.name}}</a></h5>
        <p>Specie: {{post.species}}</p>
      </div>

      {{#if showDescription}}
        <p class="card-text">
          {{post.description}}
        </p>
      {{/if}}
      
      <p class="card-text posts-shelter-name">
        {{#if post.author.name}}
          <b>Shelter:</b> <a href="/users/{{post.author.id}}">{{post.author.name}}</a>
        {{/if}}
      </p>

      <p class="card-text">
        {{#if post.author.name}}
          <b>Location:</b> {{post.author.city}}
        {{/if}}
      </p>

      <div class="card-text card-text-date">
        <small>{{date post.createdAt}}</small>
      </div>
      
    </div>

    <div id="features">
      <p class="card-text">
        <div class="features">
          <ul>
            {{!-- <li class="">Specie: {{post.species}}</li> --}}
            <div class="features-div">
              <li class=""><b>Age:</b> {{post.age}} years</li>
              <li class=""><b>Gender:</b> {{post.gender}}</li>
              <li class=""><b>Size: </b>{{post.size}}</li>
              <li class=""><b>Breed:</b> {{post.breed}}</li>
            </div>
           
          </ul>
        </div>
      </p>
    </div>

    <button type="button" class="btn adopt-me-btn" data-toggle="modal" data-target="#exampleModal" data-whatever="@getbootstrap"><i class="fas fa-exclamation-triangle"></i>Urgent adoption!<i class="fas fa-exclamation-triangle"></i></button>

  <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">

      <div class="modal-content">

        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLabel">Adoption form</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>

        <div class="modal-body">
          <form>

            <div class="form-group">
              <label for="name" class="col-form-label">Name</label>
              <input type="text" class="form-control" id="form-user-name">
            </div>

            <div class="form-group">
              <label for="message-text" class="col-form-label">Where do you live?</label>
              <textarea class="form-control" id="message-text"></textarea>
            </div>

            <div class="form-group">
              <label for="message-text" class="col-form-label">How much time will the animal be alone at home?</label>
              <textarea class="form-control" id="message-text"></textarea>
            </div>

            <div class="form-group">
              <label for="message-text" class="col-form-label">Is it the first time that you adopt an animal?</label>
              <textarea class="form-control" id="message-text"></textarea>
            </div>

            <div class="form-group">
              <label for="message-text" class="col-form-label">Do you have any other pets?</label>
              <textarea class="form-control" id="message-text"></textarea>
            </div>

            <div class="form-group">
              <label for="message-text" class="col-form-label">Are there any toddlers at home?</label>
              <textarea class="form-control" id="message-text"></textarea>
            </div>

            <div class="form-check">
              <input class="form-check-input" type="checkbox" value="" id="defaultCheck1">
              <label class="form-check-label" for="defaultCheck1">
                I've read and accept the terms and conditions of use. (Just give me the goddamm puppy)
              </label>
            </div>

          </form>
        </div>

        <div class="modal-footer">
          <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
          <button type="button" class="btn btn-primary" data-dismiss="modal">Send message</button>
        </div>

      </div>

    </div>
  </div>
  </div>

