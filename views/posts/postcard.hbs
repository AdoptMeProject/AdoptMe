{{#if post.urgent}}

  <div class="card urgent">
    <img src="{{post.image}}" class="card-img-top" alt="...">

    <div class="card-body">
      <h5 class="card-title"><a href="/posts/{{post._id}}" class="text-dark">{{post.name}}</a></h5>

      {{#if showDescription}}
        <p class="card-text">
          {{post.description}}
        </p>
      {{/if}}
      
      <p class="card-text">
        {{#if post.author.name}}
          Shelter: <a href="/users/{{post.author.id}}">{{post.author.name}}</a>
        {{/if}}
      </p>

      <p class="card-text">
        {{#if post.author.name}}
          Location: {{post.author.city}}
        {{/if}}
      </p>

      {{!-- <button type="button" class="btn-sm btn btn-outline-danger" data-like-post="{{post.id}}">
        <i class="fa fa-heart mr-1"></i>
        <span class="likes-count">{{post.likes}}</span>
        Likes
      </button> --}}
    </div>

    <div>
      <p class="card-text">
        {{#if post.author.name}}
        <ul class="list-group list-group-flush">
          <li class="list-group-item">Specie: {{post.species}}</li>
          <li class="list-group-item">Age: {{post.age}} years</li>
          <li class="list-group-item">Gender: {{post.gender}}</li>
          <li class="list-group-item">Size: {{post.size}}</li>
          <li class="list-group-item">Breed: {{post.breed}}</li>
        </ul>
        {{/if}}
      </p>
    </div>

    <div class="card-footer">
      <small class="text-muted">{{date post.createdAt}}</small>
    </div>
  </div>

