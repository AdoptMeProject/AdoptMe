<article class="container">

  <div class="row">
    <div class="col-2">
      <img src="{{user.avatar}}" class="w-100 rounded-circle" />
    </div>

    <div class="col">

      <form action="/users/{{user._id}}/edit" method="POST">

        <div class="form-group">

          <label for="name">Name</label>
          <input name="name" type="text" value="{{user.name}}" class="form-control {{#if error.name }}is-invalid{{/if}}"
            id="name" required>
      
          {{#if error.name}}
            <div class="invalid-feedback">
              {{error.name.message}}
            </div>
          {{/if}}

        </div>
      
        <div class="form-group">

          <label for="email">Email</label>
          <input type="email" value="{{user.email}}" class="form-control {{#if error.email }}is-invalid{{/if}}" id="email"
            name="email" placeholder="Enter name" required>
      
          {{#if error.email}}
            <div class="invalid-feedback">
              {{error.email.message}}
            </div>
          {{/if}}

        </div>
      
        <div class="form-group">

          <label for="password">Password</label>
          <input type="password" class="mb-3 form-control {{#if error.password }}is-invalid{{/if}}" id="password"
            name="password" disabled>
          <button type="button" data-enable="password" class="btn btn-outline-primary btn-sm">Change password</button>
      
          {{#if error.password}}
            <div class="invalid-feedback">
              {{error.password.message}}
            </div>
          {{/if}}

        </div>
      
        <div class="form-group">

          <label for="bio">Bio</label>
          <textarea rows="5" type="text" class="form-control {{#if error.bio }}is-invalid{{/if}}" name="bio"
            id="bio">{{user.bio}}</textarea>
      
          {{#if error.bio}}
            <div class="invalid-feedback">
              {{error.bio.message}}
            </div>
          {{/if}}

        </div>

        <div class="form-group">

          <label for="city">City</label>
          <input rows="5" type="text" class="form-control {{#if error.city }}is-invalid{{/if}}" name="city"
            id="city" placeholder="{{user.city}}"></input>
      
          {{#if error.city}}
            <div class="invalid-feedback">
              {{error.city.message}}
            </div>
          {{/if}}

        </div>

        <div class="form-group">

          <label for="address">Address</label>
          <input rows="5" type="text" class="form-control {{#if error.address }}is-invalid{{/if}}" name="address"
            id="address" placeholder="{{user.address}}"></input>
      
          {{#if error.address}}
            <div class="invalid-feedback">
              {{error.address.message}}
            </div>
          {{/if}}

        </div>

        <div class="form-group">

          <label for="phone">Phone</label>
          <input rows="5" type="text" class="form-control {{#if error.phone }}is-invalid{{/if}}" name="phone"
            id="phone" placeholder="{{user.phone}}"></input>
      
          {{#if error.phone}}
            <div class="invalid-feedback">
              {{error.phone.message}}
            </div>
          {{/if}}

        </div>
      
        <div class="form-group">

          <label for="avatar">Avatar</label>
          <input type="file" class="mb-3 form-control-file {{#if error.avatar }}is-invalid{{/if}}" id="avatar" name="avatar"
            disabled>
          <button type="button" data-enable="avatar" class="btn btn-outline-primary btn-sm">Change avatar</button>
      
          {{#if error.avatar}}
            <div class="invalid-feedback">
              {{error.avatar.message}}
            </div>
          {{/if}}

        </div>
      
        <button type="submit" class="btn btn-primary">Update profile</button>

      </form>

    </div>

  </div>

</article>