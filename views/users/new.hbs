<article class="container">
  <h1>New user</h1>

  <form action="/users" method="POST" enctype="multipart/form-data"> 
    <div class="form-group">
      <label for="name">Name</label>
      <input name="name" type="text" value="{{user.name}}" class="form-control {{#if error.name }}is-invalid{{/if}}" id="name" required>

      {{#if error.name}}
        <div class="invalid-feedback">
          {{error.name.message}}
        </div>
      {{/if}}
    </div>

    <div class="form-group">
      <label for="email">Email</label>
      <input type="email" value="{{user.email}}" class="form-control {{#if error.email }}is-invalid{{/if}}" id="email" name="email" placeholder="Enter name" required>

      {{#if error.email}}
        <div class="invalid-feedback">
          {{error.email.message}}
        </div>
      {{/if}}
    </div>

    <div class="form-group">
      <label for="password">Password</label>
      <input type="password" class="form-control {{#if error.password }}is-invalid{{/if}}" id="password" name="password">

      {{#if error.password}}
        <div class="invalid-feedback">
          {{error.password.message}}
        </div>
      {{/if}}
    </div>

    <div class="form-group">
      <label for="bio">Bio</label>
      <textarea rows="5" type="text" class="form-control {{#if error.bio }}is-invalid{{/if}}" name="bio" id="bio">{{user.bio}}</textarea>

      {{#if error.bio}}
        <div class="invalid-feedback">
          {{error.bio.message}}
        </div>
      {{/if}}
    </div>


    <button type="submit" class="btn btn-primary">Submit</button>
  </form>
</article>