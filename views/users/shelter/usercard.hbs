{{#if user.shelter}}
    <div class="card mb-3" style="max-width: 540px; height:100%">
        <div class="row no-gutters">
            <div class="full-width">
                <img src="{{user.avatar}}" class="card-img center" alt="User avatar" width="100%">
            </div>
            <div class="">
                <div class="card-body">
                    <h5 class="card-title">{{user.name}}</h5>
                    <p class="card-text">{{user.bio}}</p>
                    {{!-- <p class="card-text"><small class="text-muted">Shelter: 🐶🐱</small></p> --}}
                    
                </div>
            </div>
            <hr class="white">
            <div class="metadata">
                <p class="card-text white"><small>{{user.city}}</small>
                <small>{{date user.createdAt}}</small></p>
            </div>
            <a href="/users/{{user._id}}" class="white-button">Check shelter</a>
        </div>
    </div>
{{/if}}
