{{#if user.shelter}}
    <div class="card mb-3" style="max-width: 540px;">
        <div class="row no-gutters">
            <div class="col-md-4">
                <img src="{{user.avatar}}" class="card-img" alt="User avatar">
            </div>
            <div class="col-md-8">
                <div class="card-body">
                    <h5 class="card-title">{{user.name}}</h5>
                    <p class="card-text">{{user.bio}}</p>
                    <p class="card-text"><small class="text-muted">Shelter: 🐶🐱</small></p>
                    <p class="card-text"><small class="text-muted">{{user.city}}</small></p>
                </div>
            </div>
            <div class="card-footer">
                <small class="text-muted">{{date user.createdAt}}</small>
            </div>
            <a href="/users/{{user._id}}" class="text-dark">Check shelter</a>
        </div>
    </div>
{{/if}}
